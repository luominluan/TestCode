.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.content {
  display: flex;
}

.categories {
  width: 100px;
  background-color: #f0f0f0;
}

.category {
  padding: 10px;
  text-align: center;
  border-bottom: 1px solid #ccc;
}

.dishes {
  flex: 1;
  margin-left: 20px;
}

.dish {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.dish-image {
  width: 60px;
  height: 60px;
  border-radius: 8px;
  margin-right: 10px;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.dish-name {
  font-size: 16px;
  font-weight: bold;
}

.dish-details {
  font-size: 14px;
  color: #666;
}

.add-button {
  margin-left: auto;
  background-color: #ff5a5f;
  color: white;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  line-height: 30px;
}