.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.image-container {
  width: 100%;
  height: 200px;
  background-color: red;
  margin-bottom: 20px;
}

.days-counter {
  font-size: 18px;
  margin-bottom: 20px;
}

.heart-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.heart {
  position: absolute;
  width: 20px;
  height: 20px;
  background-color: red;
  border-radius: 50%;
  animation: float 1s ease-in-out;
}

@keyframes float {
  0% { transform: translateY(0); opacity: 1; }
  100% { transform: translateY(-100px); opacity: 0; }
}